server {
    listen 8080;
    listen [::]:8080;
    root /home/site/wwwroot/public; # Azure default for Laravel

    index index.php index.html index.htm;

    server_name brgy-sys-fbctb5abgbfffpah.southeastasia-01.azurewebsites.net;

    port_in_redirect off;

    location / {
            try_files $uri $uri/ /build/index.html;
    }

    location / {
        index index.php index.html index.htm;
        try_files $uri $uri/ /index.php?$args;
    }

    # Block access to .env and other sensitive files
    location ~ /\.(?!well-known).* {
        deny all;
    }

    # PHP-FPM configuration
    location ~ [^/]\.php(/|$) {
        fastcgi_split_path_info ^(.+?\.php)(|/.*)$;
        fastcgi_pass 127.0.0.1:9000;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        fastcgi_param QUERY_STRING $query_string;
        fastcgi_intercept_errors on;
        fastcgi_connect_timeout 300;
        fastcgi_send_timeout 3600;
        fastcgi_read_timeout 3600;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
        fastcgi_temp_file_write_size 256k;
    }

    location ~* \.(?:ico|css|js|gif|jpe?g|png|woff2?|ttf|svg|eot)$ {
            expires 30d;
            access_log off;
            add_header Cache-Control "public";
    }

    # Error page
    #error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /html/;
    }
}
